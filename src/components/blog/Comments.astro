---
/* Generate Giscus from
 * https://giscus.app/
 * you only need to change the following fields:
 * dataset.repo="XXX"
 * dataset.repoId="XXX"
 * dataset.category="XXX"
 * dataset.categoryId="XXX"
 **/
---

<div
	class="prose prose-lg mx-auto pt-20 dark:prose-invert"
	data-xdata={`{
				initGiscus: function() {
					let script = document.createElement('script');
					script.src = 'https://giscus.app/client.js';
                                        script.dataset.repo = 'mosiandlake/field-notes';
                                        script.dataset.repoId = 'REPLACE_ME';
                                        script.dataset.category = 'Comments';
                                        script.dataset.categoryId = 'REPLACE_ME';
					script.dataset.mapping = 'og:title';
					script.dataset.strict = '0';
					script.dataset.reactionsEnabled = '1';
					script.dataset.emitMetadata = '0';
					script.dataset.inputPosition = 'top';
					script.dataset.theme = localStorage.theme == 'dark' ? 'dark' : 'light';
					script.dataset.lang = 'en';
					script.dataset.loading = 'lazy';
					script.crossOrigin = 'anonymous';
					script.async = true;
					this.$el.appendChild(script);
				}
			}`}
	x-init="initGiscus()">
</div>
