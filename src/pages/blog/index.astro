---
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { AstroSeoProps } from "@astrolib/seo";
import Articles from "@components/blog/Articles.astro";

const seo: AstroSeoProps = {
        title: "Field Notes by Mosi & Lake Safaris",
        description:
                "Travel journals, packing tips, and seasonal updates from our Zambia and Malawi self-drive routes.",
        canonical: "https://mosiandlake.com/blog/",
        openGraph: {
                url: "https://mosiandlake.com/blog",
                title: "Field Notes by Mosi & Lake Safaris",
                description:
                        "Follow our on-the-ground stories, wildlife sightings, and planning guidance direct from Zambia and Malawi.",
                images: [
                        {
                                url: "https://mosiandlake.com/opengraph/social-og.jpg",
                                width: 1200,
                                height: 630,
                                alt: "Mosi & Lake Safaris Field Notes open graph image",
                                type: "image/jpeg",
                        },
                        {
                                url: "https://mosiandlake.com/opengraph/twitter-og.jpg",
                                width: 4096,
                                height: 4096,
                                alt: "Mosi & Lake Safaris Field Notes Twitter image",
                                type: "image/jpeg",
                        },
                        { url: "https://mosiandlake.com/opengraph/social-og.jpg" },
                        { url: "https://mosiandlake.com/opengraph/twitter-og.jpg" },
                ],
                site_name: "Mosi & Lake Safaris",
        },
        twitter: {
                handle: "@mosiandlake",
                site: "@mosiandlake",
                cardType: "summary_large_image",
        },
};
