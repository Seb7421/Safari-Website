---
import type { AstroSeoProps } from "@astrolib/seo";
import Articles from "@components/blog/Articles.astro";
import BaseLayout from "@layouts/BaseLayout.astro";

const seo: AstroSeoProps = {
        title: "Field Notes di Mosi & Lake Safaris",
        description:
                "Diari di viaggio, consigli pratici e aggiornamenti stagionali dai nostri percorsi self-drive in Zambia e Malawi.",
        canonical: "https://mosiandlake.com/it/blog/",
        openGraph: {
                url: "https://mosiandlake.com/it/blog",
                title: "Field Notes di Mosi & Lake Safaris",
                description:
                        "Segui i nostri racconti dal campo, gli avvistamenti faunistici e le dritte di pianificazione per i viaggi su strada in Zambia e Malawi.",
                images: [
                        {
                                url: "https://mosiandlake.com/opengraph/social-og.jpg",
                                width: 1200,
                                height: 630,
                                alt: "Immagine open graph di Field Notes",
                                type: "image/jpeg",
                        },
                        {
                                url: "https://mosiandlake.com/opengraph/twitter-og.jpg",
                                width: 4096,
                                height: 4096,
                                alt: "Immagine Twitter di Field Notes",
                                type: "image/jpeg",
                        },
                        { url: "https://mosiandlake.com/opengraph/social-og.jpg" },
                        { url: "https://mosiandlake.com/opengraph/twitter-og.jpg" },
                ],
                site_name: "Mosi & Lake Safaris",
        },
        twitter: {
                handle: "@mosiandlake",
                site: "@mosiandlake",
                cardType: "summary_large_image",
        },
};
---

<BaseLayout seo={seo}>
	<Articles />
</BaseLayout>
